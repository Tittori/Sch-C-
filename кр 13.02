def remove_value_from_list(number_list, value_to_remove):
    result_list = [num for num in number_list if num != value_to_remove]
    return result_list

# Пример вызова функции
numbers = [2, 3, 4, 3, 5, 6, 3]
value_to_remove = 3

result = remove_value_from_list(numbers, value_to_remove)

print("Исходный список:", numbers)
print("Список после удаления значений равных", value_to_remove, ":", result)
